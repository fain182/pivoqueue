!!!
%html{:xmlns=>"http://www.w3.org/1999/xhtml"}
  %head
    %title pivoqueue
    %link{ :rel=>"stylesheet", :type=>"text/css", :href=>"http://yui.yahooapis.com/2.8.1/build/reset/reset-min.css" }/
    %link{ :rel=>'stylesheet', :type=>'text/css', :href=>'style.css' }/
    %link{ :rel=>"icon", :href=>"favicon.ico"}/
    %meta{ 'http-equiv'=>"Content-Type", :content=>"text/html; charset=UTF-8"}/
    %script{:type=>'text/javascript', :src =>'http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js'}
    %script{:type=>'text/javascript', :src =>'http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.5/jquery-ui.min.js'}
    :javascript
      $(document).ready(function() {
        $("#story-list").sortable({ handle: '.story', axis: 'y' });
        $(".done").click(function(){
          $.get("done/"+$(this).attr("name"), function (data){
            $('#li_'+data).remove();
          });
        });
      });
  %body
    #container
      = yield
      powered by
      %a{:href=>'http://www.github.com/fain182/pivoqueue'} pivoqueue
